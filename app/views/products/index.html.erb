<html>
  <head>
    <style>
      .center {  /*实现块元素的居中*/
       width: auto;
       display: table;
       margin-left: auto;
       margin-right: auto;
      }

      .shop_form_ul{
       list-style-type: none;
       margin: 0;
       padding: 0;
       overflow: hidden;
       text-align: center

      }
      .shop_form_li{
       float: left;
      }
      .shop_form_li_a{
       display: block;
       color: #c0c0c0;
       text-align: center;
       padding: 16px;
       text-decoration: none;
      }
    </style>
  </head>

  <body>
    <div class="row">
      <%= render "common/navbar"%>
      <%= render "common/flashes"%>

      <div class="container-fulid ">
          <div class="navbar navbar-none center " role="navigation">
              <ul class="shop_form_ul">
               <li class="shop_form_li"><a class="shop_form_li_a" href="#">ALL</a></li>
               <li class="shop_form_li"><a class="shop_form_li_a" href="#">SHIRTS</a></li>
               <li class="shop_form_li"><a class="shop_form_li_a" href="#">SWEATRES</a></li>
               <li class="shop_form_li"><a class="shop_form_li_a" href="#">JEANS</a></li>
               <li class="shop_form_li"><a class="shop_form_li_a" href="#">JACKETS</a></li>
             </ul>
          </div>
      </div>



      <% @products.each do |product| %>
        <div class="col-xs-6 col-md-3">
          <%= link_to product_path(product) do %>
            <% if product.image.present? %>
              <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
            <% else %>
              <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
            <% end %>
          <% end %>
          <%= product.title %> ￥ <%= product.price %>
        </div>
      <% end %>
    </div>
  </body>
</html>
